<?xml version="1.0"?>
<configuration>
    <!-- MapReduce Framework -->
    <property>
        <name>mapreduce.framework.name</name>
        <value>yarn</value>
        <description>Use YARN as the MapReduce framework</description>
    </property>
    
    <!-- History Server -->
    <property>
        <name>mapreduce.jobhistory.address</name>
        <value>historyserver:10020</value>
    </property>
    
    <property>
        <name>mapreduce.jobhistory.webapp.address</name>
        <value>historyserver:19888</value>
    </property>
    
    <!-- Environment -->
    <property>
        <name>yarn.app.mapreduce.am.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop-2.7.4/</value>
    </property>
    
    <property>
        <name>mapreduce.map.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop-2.7.4/</value>
    </property>
    
    <property>
        <name>mapreduce.reduce.env</name>
        <value>HADOOP_MAPRED_HOME=/opt/hadoop-2.7.4/</value>
    </property>
</configuration>
